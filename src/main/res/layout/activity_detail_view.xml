<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:showDividers="middle">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:context="com.sainath.rentalapp.DetailViewActivity" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/bottom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/PrimaryColor"
        android:elevation="15dp"
        android:layoutMode="opticalBounds"
        android:minHeight="60dp"
        android:textAlignment="center"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:showDividers="middle"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:clickable="true"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/ic_call_black_36dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="CALL"
                android:onClick="onClick" />

            <TextView
                android:id="@+id/user_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:clickable="true"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/ic_email_black_36dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="MAIL"
                android:onClick="onClick" />

            <TextView
                android:id="@+id/user_locate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:clickable="true"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/ic_place_black_36dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="LOCATE"
                android:onClick="onClick" />

            <TextView
                android:id="@+id/user_reservation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:clickable="true"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/ic_save_black_36dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="RESERVE"
                android:onClick="onClick" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>
</LinearLayout>
