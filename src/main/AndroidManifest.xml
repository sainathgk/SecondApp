        <provider
            android:name="com.database.rentalapp.RentalContentProvider"
            android:authorities="com.database.rentalapp"
            android:enabled="true"
            android:exported="true" >
        </provider>

        <activity
            android:name=".DetailViewActivity"
            android:theme="@style/DialogTheme"
            android:parentActivityName=".RentalMainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sainath.rentalapp.RentalMainActivity" />
        </activity>

        <activity android:name=".SelectLocationActivity"
            android:parentActivityName=".PostMainActivity" >

            </activity>
        <service
            android:name="com.service.rentalapp.FetchAddressIntentService"
